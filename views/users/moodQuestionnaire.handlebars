<h1>What is your Current Mood?</h1>

    <form id = "moodForm" action="/activitypage" method="POST">
    <div class = "moods">
        {{#each moods}}
        <div class = "mood-list">
            <input type = "radio"
                    id = "{{this.moodName}}"
                    name = "usermood"
                    value = "{{this.moodName}}"
                    hidden/>
             <label for="{{this.moodName}}" class="mood-label">
                    {{this.moodName}}
                </label>
            <div class = "mood-variants">
                {{#each this.mood_variants}}
                    <p>{{this}}</p>
                    {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
      <button type = "submit" class = "submit">Submit</button>
    </form>
