<h1>Select an Interest</h1>
<form id="interestForm" action="/interests/:interest/activities" method="POST">
  <div class="form-floating col-3">
    <select name="interest" class="form-select" id="interestselect" required>
      <option value="" disabled selected>Choose an interest</option>
      {{#each interests}}
        <option value="{{this}}">{{this}}</option>
      {{/each}}
    </select>
  </div>
  <button type="button" id="getActivitiesBtn" class="btn btn-primary mt-3">Get Activities</button>
</form>

<div id="activities-container" class="hidden">
  <h3>Suggested Activities:</h3>
  <ul id="activities-list"></ul>
</div>
<button type="button" id="nextPageBtn" class="btn btn-secondary mt-3 hidden">Next</button>

<script 
  src="https://code.jquery.com/jquery-2.2.4.min.js" 
  integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" 
  crossorigin="anonymous">
</script>
<script src="/public/js/interests.js"></script>

<div class="moodForm hidden" id="error-container">
  <div class="alert alert-danger text-goes-here"></div>
</div>
